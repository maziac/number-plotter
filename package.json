{
    "name": "number-plotter",
    "displayName": "Number Plotter",
    "description": "Creates plots/charts from a series of selected numbers.",
    "version": "1.5.0",
    "publisher": "maziac",
    "license": "MIT",
    "keywords": [
        "number",
        "series",
        "plot",
        "plotter",
        "graph",
        "chart"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/maziac/number-plotter.git"
    },
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Data Science",
        "Visualization"
    ],
    "icon": "assets/local/icon.png",
    "activationEvents": [
        "onCommand:number-plotter.linechart",
        "onCommand:number-plotter.xychart"
    ],
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "npm run esbuild-node -- --minify && npm run esbuild-browser -- --minify",
        "esbuild-node": "esbuild ./src/extension.ts --bundle --outdir=out --external:vscode --format=cjs --platform=node",
        "esbuild-browser": "esbuild ./src/html/main.ts --bundle --outdir=out/html --platform=browser",
        "watch-node": "npm run esbuild-node -- --sourcemap --watch",
        "watch-browser": "npm run esbuild-browser -- --sourcemap --watch",
        "package": "vsce package"
    },
    "contributes": {
        "commands": [
            {
                "command": "number-plotter.linechart",
                "title": "Line/Bar Chart",
                "category": "number-plotter"
            },
            {
                "command": "number-plotter.xychart",
                "title": "X/Y Chart",
                "category": "number-plotter"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "number-plotter.submenu",
                    "when": "editorHasSelection"
                }
            ],
            "number-plotter.submenu": [
                {
                    "command": "number-plotter.linechart"
                },
                {
                    "command": "number-plotter.xychart"
                }
            ]
        },
        "submenus": [
            {
                "id": "number-plotter.submenu",
                "label": "Plot"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Number Plotter configuration",
            "properties": {
                "number-plotter.donated": {
                    "description": "If you donated (press the donate button in the help) you can hide the button by setting this parameter. (After closing/re-opening the window.)",
                    "type": "boolean",
                    "scope": "resource",
                    "default": false
                }
            }
        }
    },
    "dependencies": {
        "chart.js": "^3.7.0",
        "chartjs-plugin-zoom": "^1.2.0",
        "hammerjs": "^2.0.8"
    },
    "devDependencies": {
        "@types/node": "^16.11.4",
        "@types/vscode": "^1.61.0",
        "@types/vscode-webview": "^1.57.0",
        "esbuild": "^0.16.10",
        "jest": "^29.3.1",
        "source-map-support": "^0.5.21",
        "typescript": "^4.4.4"
    }
}
