{
    "name": "number-plotter",
    "displayName": "Number Plotter",
    "description": "Creates plots/charts from a series of selected numbers.",
    "version": "1.1.2",
    "publisher": "maziac",
    "license": "MIT",
    "keywords": [
        "number",
        "series",
        "plot",
        "plotter",
        "graph",
        "chart"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/maziac/number-plotter.git"
    },
    "engines": {
        "vscode": "^1.54.0"
    },
    "categories": [
        "Data Science",
        "Visualization"
    ],
    "icon": "assets/icon.png",
    "activationEvents": [
        "workspaceContains:*"
    ],
    "main": "./out/extension",
    "scripts": {
        "compile": "tsc -p ./",
        "tslint": "eslint ./**/*.ts",
        "watch": "tsc -w -p ./",
        "test": "mocha -u tdd ./out/tests/",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/mocha": "^8.2.0",
        "@types/node": "^13.13.39",
        "@types/vscode": "^1.52.0",
        "typescript": "^4.1.3"
    },
    "contributes": {
        "commands": [
            {
                "command": "number-plotter.linechart",
                "title": "Line/Bar Chart",
                "category": "number-plotter"
            },
            {
                "command": "number-plotter.xychart",
                "title": "X/Y Chart",
                "category": "number-plotter"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "number-plotter.submenu",
                    "when": "editorHasSelection"
                }
            ],
            "number-plotter.submenu": [
                {
                    "command": "number-plotter.linechart"
                },
                {
                    "command": "number-plotter.xychart"
                }
            ]
        },
        "submenus": [
            {
                "id": "number-plotter.submenu",
                "label": "Plot"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Number Plotter configuration",
            "properties": {
                "number-plotter.donated": {
                    "description": "If you donated (press the donate button in the help) you can hide the button by setting this parameter. (After closing/re-opening the window.)",
                    "type": "boolean",
                    "scope": "resource",
                    "default": false
                }
            }
        }
    },
    "dependencies": {
        "chart.js": "^3.2.1"
    }
}
